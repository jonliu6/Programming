<?xml version='1.0' encoding='utf-8'?>
<widget id="org.freecode.demo.hybrid.meansureConverter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MeasureConverter</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="measureConvertor.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/96-xhdpi.png" />
        <resource-file src="res/screen/android/mc.png" target="res/drawable-hdpi/mc.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
