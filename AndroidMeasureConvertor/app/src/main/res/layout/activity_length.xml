<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.freecode.demo.android.measureconverter.LengthActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="Inch"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etxInch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lblInchUOM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="in"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="Foot"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etxFoot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lblFootUOM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="ft"
                    android:textSize="@dimen/title_font_size"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:onClick="showFormattedFtInVal"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="Centimeter"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etxCentimeter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lblCentimeterUOM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="cm"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="Meter"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etxMeter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lblMeterUOM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="m"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="Yard"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etxYard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lblYardUOM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="yd"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="Mile"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etxMile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lblMileUOM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:text="mi"
                    android:textSize="@dimen/label_font_size"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="0dp"
                    android:onClick="calculate"
                    android:text="Calculate"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:onClick="clearFields"
                    android:text="Clear"
                    android:textSize="12dp" />

            </TableRow>
        </TableLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
